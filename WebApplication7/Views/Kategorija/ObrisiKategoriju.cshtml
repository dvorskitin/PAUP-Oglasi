@model Akcija_prodaja.Models.KategorijaModel

<script src="@Url.Content("~/Scripts/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="modal-dialog">

    <div class="modal-content">

        <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title align-content-center">Brisanje kategorije</h4>
        </div>
        @using (Ajax.BeginForm("ObrisiKategoriju", "Kategorija", new { id = Model.id_kategorija }, new AjaxOptions

        {

            HttpMethod = "Post",

            OnSuccess = "DeleteSuccess"

        }, new { @class = "form-horizontal", role = "form" }))

        {
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id_kategorija)
                    <div class="form-group">
                        @Html.Display("Kategorija:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.naziv_kategorije, new { htmlAttributes = new { @class = "form-control" } })

                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-10">

                            <h4>Da li ste sigurni da želite obrisati kategoriju? Brisanjem kategorije brišete i sve njezine oglase!</h4>

                        </div>

                    </div>
                    <div class="modal-footer">

                        <div class="form-group">

                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary" value="Potvrdi" />

                                <a href="@Url.Action("PopisKategorija")" class="btn btn-default btn-md btn-grad">Odustani</a>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        }
    </div>

</div>



